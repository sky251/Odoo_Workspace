<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="school_mail_template_view" model="mail.template">
            <field name="name">School Card: Send by email</field>
            <field name="model_id" ref="school.model_school_profile"/>
            <field name="email_from">${(object.email.email_formatted) |safe}</field>
            <field name="email_to">${object.student_data_ids.student_email}</field>
            <field name="subject">School name:(Ref ${object.name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        <strong>${object.student_data_ids.name}</strong>,
                        <br/>
                        <br/>
                        Here is your course:<strong>${object.courses}</strong>
                        and fees:<strong>${object.fees}</strong>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="report_school_detail"/>
            <field name="report_name">
                School_${(object.name)}
            </field>
        </record>
    </data>

</odoo>