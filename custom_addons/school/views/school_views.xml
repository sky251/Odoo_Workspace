<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="school_list_view" model="ir.ui.view">
        <field name="name">school_profile.list.view</field>
        <field name="model">school.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="school_name"/>
                <field name="email"/>
                <field name="phone"/>
                <!--                <field name="parking"/>-->
                <field name="result"/>
                <!--                <field name="fees"/>-->
                <field name="school_address"/>
                <!--                <field name="establish_date"/>-->
                <field name="open_date"/>
                <field name="courses"/>
                <!--                <field name="documents"/>-->
                <field name="docu_name" invisible="1"/>
                <!--                <field name="school_desc"/>-->
            </tree>
        </field>
    </record>

    <record id="school_form_view" model="ir.ui.view">
        <field name="name">school.form</field>
        <field name="model">school.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <h2>
                                <field name="school_name" placeholder="Name"/>
                            </h2>

                            <field name="result"/>
                            <field name="fees"/>
                            <field name="school_address"/>
                            <field name="establish_date" placeholder="MM/DD/YYYY"/>
                            <field name="open_date"/>

                            <field name="parking"/>
                            <field name="documents" filename="docu_name"/>
                        </group>
                        <group>

                            <field name="docu_name" invisible="1"/>
                            <group>
                                <field name='image' nolabel="1" widget="image" placeholder="Upload Your Look"
                                       style="margin-top: 1rem; margin-left:6rem; width:7rem; background-color:#B2A6C6;"
                                       class="img img-responsive"/>
                            </group>


                        </group>

                    </group>
                    <group>
                        <field name="school_desc" widget="html_frame"/>
                    </group>
                    <notebook>
                        <page string="Email">

                            <notebook>
                                <page string="Page inside page">
                                    <group>
                                        <field name="email" placeholder="school email address"/>
                                    </group>
                                </page>
                            </notebook>
                        </page>
                        <page string="Phone">
                            <group>
                                <field name="phone" placeholder="school contact no"/>
                            </group>
                        </page>
                        <page string="Courses">
                            <group>
                                <field name="courses"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_profile" model="ir.actions.act_window">
        <field name="name">School Profile</field>
        <field name="res_model">school.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="school_root_menu"
            name="School"/>

    <menuitem
            name="School Prof"
            id="school_profile_menu"
            action="action_school_profile"
            parent="school_root_menu"/>

    <menuitem
            name="Menu2"
            id="school_profile_menu2"
            action="action_school_profile"
            parent="school_root_menu"/>

    <menuitem
            name="Menu3"
            id="school_profile_menu3"
            action="action_school_profile"
            parent="school_root_menu"/>

</odoo>


