<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="school_list_view" model="ir.ui.view">
        <field name="name">school_profile.list.view</field>
        <field name="model">school.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="school_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="parking"/>
                <field name="result"/>
                <field name="fees"/>
                <field name="school_address"/>
                <field name="establish_date"/>
                <field name="open_date"/>
                <field name="courses"/>
                <field name="documents"/>
                <field name="docu_name" invisible="1"/>
                <field name="upld_schl_img" width="25" height="25" widget="image"/>
                <field name="upld_schl_img_name"/>
                <!--                <field name="school_desc"/>-->
            </tree>
        </field>
    </record>

    <record id="school_form_view" model="ir.ui.view">
        <field name="name">school.form</field>
        <field name="model">school.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <h2>
                                <field name="school_name"/>
                            </h2>




                            <field name="result"/>
                            <field name="fees"/>
                            <field name="school_address"/>
                            <field name="establish_date" placeholder="MM/DD/YYYY"/>
                            <field name="open_date"/>

                            <field name="parking"/>
                            <field name="documents" filename="docu_name"/>
                        </group>
                        <group>

                            <field name="docu_name" invisible="1"/>
                            <field name="upld_schl_img" widget="image" filename="upld_schl_img_name"/>
                            <field name="upld_schl_img_name" invisible="1"/>
                            <!--                            <field name="school_desc" widget="html"/>-->
                        </group>

                    </group>
                    <notebook>
                        <page string="Email">
                            <field name="email" placeholder="school email address"/>
                        </page>
                        <page string="Phone">
                            <field name="phone" placeholder="school contact no"/>
                        </page>
                        <page string="Courses">
                            <b><field name="courses"/></b>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_profile" model="ir.actions.act_window">
        <field name="name">School Profile</field>
        <field name="res_model">school.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_root_menu" name="School"/>
    <menuitem id="school_sub_menu" name="school menu" parent="school_root_menu"/>
    <menuitem id="school_profile_menu" action="action_school_profile" parent="school_sub_menu" sequence="2"/>


</odoo>


