<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="student_list_view" model="ir.ui.view">
        <field name="name">student_profile.list.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="calculate"/>
                <field name="student_email"/>
                <field name="school_select_id"/>
                <field name="student_phone"/>
                <field name="student_result"/>
                <field name="is_parking"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="student_form_view" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirm" icon="fa-heart" class="border border-danger btn-outline-danger" type="object"/>
                    <button id="button_done" name="action_done" string="Done" icon="fa-bitcoin" class="border border-success btn-outline-success" type="object"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" class="border border-dark btn-outline-dark" icon="fa-window-close" states="create,received,done" type="object"/>
                    <field name="state" class="btn btn-outline-primary" widget="statusbar"  options="{'clickable':1}" statusbar_visible="create,done,received"/>
                </header>
                <sheet>
                    <group>
                        <group>

                            <h2>
                                <field name="name" placeholder=" Student Name"/>
                            </h2>

                            <field name="is_parking"/>
                            <field name="calculate"/>
                            <field name="student_phone"/>
                            <field name="student_result"/>
                            <field name="school_select_id"/>
                            <field name="user_signature" widget="signature"/>
                        </group>
                        <group>
                            <field name='student_img' filename="upld_schl_img_name" nolabel="1" widget="image" placeholder="Upload Your Look"
                                       style="margin-top: 1rem; margin-left:6rem; width:7rem; background-color:#B2A6C6;"
                                       class="img img-responsive"/>
<!--                            <field name="student_img" widget="image" filename="upld_schl_img_name"/>-->
                        </group>

                    </group>

                    <notebook>
                        <page string="Student Strength">
                            <group>
                                <field name="student_email" placeholder="school email address"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_profile" model="ir.actions.act_window">
        <field name="name">Student Profile</field>
        <field name="res_model">student.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="student_nav" name="Student Prof" action="action_student_profile" parent="school_root_menu"
              sequence="2"/>
</odoo>


