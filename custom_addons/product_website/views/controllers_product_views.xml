<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="product_detail_list">
        <t t-call="website.layout">
            <t t-set="title">Product List</t>
            <div class="oe_structure">
                <div class="container">
                    <table class="table table-bordered">
                        <thead>
                            <tr class="thead-dark">
                                <th>Product Image</th>
                                <th>Type</th>
                                <th>Stock on hand</th>
                                <th>No</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="product_data" t-as="product">

                                <td>
                                    <span class="product_image" t-field="product.image_1920"
                                          t-options='{"widget":"image"}'/>
                                </td>
                                <td>
                                    <t t-esc="product.name"/>
                                </td>
                                <td>
                                    <t t-esc="product.qty_available"/>
                                </td>
                                <td>
                                    <a class="anchor_image" target="_self" t-attf-href="/product/prod/#{product.id}">
                                        Description
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>